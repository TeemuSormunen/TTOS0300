<Window x:Class="Labra10T1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Labra10T1"
        mc:Ignorable="d"
        Title="MainWindow" Height="370" Width="325">
    <Grid Background="#FFC8FF0C">
        <StackPanel Name="stackPanel">
            <CheckBox x:Name="Milk" Content="Milk" Margin="10"/>
            <CheckBox x:Name="Butter" Content="Butter" Margin="10"/>
            <CheckBox x:Name="Beer" Content="Beer" Margin="10"/>
            <CheckBox x:Name="Chicken" Content="Chicken" Margin="10"/>
            <CheckBox x:Name="Lemonade" Content="Lemonade" Margin="10"/>
            <Button x:Name="Buy" Content="Buy" HorizontalAlignment="Left" Width="50" Height="25" Margin="10,10,0,0" Click="Buy_Click"/>
            <TextBlock x:Name="Lista" Text="###" HorizontalAlignment="Left" Width="200" Height="100" Margin="10,10,0,10" Background="White"  />
            


        </StackPanel>
    </Grid>
</Window>
